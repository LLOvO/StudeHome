<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_column="2"
    android:padding="10dp"
    app:alignmentMode="alignBounds"
    app:orientation="horizontal"
    app:useDefaultMargins="true"
    tools:context="com.liangquan.studyhome.home.fragment.UIFragment">


    <android.support.v7.widget.CardView
        android:id="@+id/frag_ui_btn_listview"
        style="@style/CardViewStyle"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:cardBackgroundColor="?android:attr/colorControlActivated"
        app:layout_column="0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:text="启动演示" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ListView" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/CardViewStyle"
        android:layout_width="0dp"
        android:id="@+id/frag_ui_btn_lollipop"
        android:layout_height="80dp"
        app:cardBackgroundColor="?android:attr/colorActivatedHighlight"
        app:layout_column="1">

        <Button
            android:focusable="false"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_start_show" />
    </android.support.v7.widget.CardView>

</android.support.v7.widget.GridLayout>
